{
  "res:namespace": "assets::app",

  "#ff/debug_font.ttf":
  {
    "res:type": "file",
    "file": "file:../xaml/ff/debug_font.ttf"
  },

  "ff.debug_view.xaml":
  {
    "res:type": "file",
    "file": "file:../xaml/debug_view.xaml"
  },

  "ff.stopped_view.xaml":
  {
    "res:type": "file",
    "file": "file:../xaml/stopped_view.xaml"
  },

  "ff.debug_page_input":
  {
    "res:type": "input",
    "events":
    {
      "toggle_debug":
      [
        {
          "action":
          [
            "control",
            "f8"
          ]
        }
      ],
      "custom_debug":
      [
        {
          "action":
          [
            "shift",
            "f8"
          ]
        }
      ]
    }
  },

  "ff.game.debug_input":
  {
    "res:type": "input",
    "events":
    {
      "ff.game.cancel_step_one_frame":
      [
        {
          "action":
          [
            "escape"
          ]
        },
        {
          "action":
          [
            "tilde"
          ]
        }
      ],
      "ff.game.step_one_frame":
      [
        {
          "action":
          [
            "1"
          ],
          "repeat": 0.25
        }
      ]
    },
    "values":
    {
      "ff.game.speed_slow":
      [
        {
          "action": "2"
        }
      ],
      "ff.game.speed_fast":
      [
        {
          "action": "3"
        }
      ]
    }
  }
}
